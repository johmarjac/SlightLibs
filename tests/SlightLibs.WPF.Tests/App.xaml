<Application x:Class="SlightLibs.WPF.Tests.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SlightLibs.WPF.Tests.ViewModels"
             xmlns:views="clr-namespace:SlightLibs.WPF.Tests.Views"
             StartupUri="Views\MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
            <views:MainView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SecondViewModel}">
            <views:SecondView />
        </DataTemplate>
    </Application.Resources>
</Application>